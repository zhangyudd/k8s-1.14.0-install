! Configuration File for keepalived

global_defs {
   notification_email {
        admin@admin.com
   }
   notification_email_from Alexandre.Cassen@firewall.loc
   smtp_server 127.0.0.1
   smtp_connect_timeout 30
   router_id LVS_1
}

vrrp_instance VI_1 {
    state MASTER          
    interface {{ inter }}
    lvs_sync_daemon_inteface {{ inter }}
    virtual_router_id 88
    advert_int 1
    priority {{ priority }}       
    authentication {
        auth_type PASS
        auth_pass qV|2fsA
    }
    virtual_ipaddress {
      {{ VIP }}/24
    }
}